{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/ui-vue/main.ts", "src/ui-vue/demo/AppButton.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "sourceMap": true, // Add this line to enable source maps
    "inlineSources": true // Add this line to include original source code in the source maps
}
