{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "e2e/**/*", "e2e/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        "paths": {
            "@/*": ["./src/*"],
            "@core": ["./src/core/index.ts"],
            "@core/*": ["./src/core/*"],
            "@ui/*": ["./src/ui-vue/components/*"],
            "@ui-vue/*": ["./src/ui-vue/*"],
            "@icons/*": ["./src/icons/*"],
            "@foundation/*": ["./src/foundation/*"]
        }
    },
    "sourceMap": true, // Add this line to enable source maps
    "inlineSources": true // Add this line to include original source code in the source maps
}
